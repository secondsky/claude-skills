{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env", "tsconfig.json", "**/.env.*local"],
	"globalEnv": ["NODE_ENV", "CI"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [
				"dist/**",
				".next/**",
				"!.next/cache/**",
				"storybook-static/**"
			],
			"env": ["NODE_ENV", "NEXT_PUBLIC_API_URL"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": ["coverage/**"],
			"cache": true
		},
		"typecheck": {
			"dependsOn": ["^build"]
		},
		"deploy": {
			"dependsOn": ["build", "test", "lint"]
		},
		"db:generate": {
			"cache": false
		},
		"db:push": {
			"cache": false
		}
	}
}
